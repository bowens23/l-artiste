{{#if success_msg}}
            
    <div class="alert alert-success">{success_msg}}</div>

{{/if}}

<!-- Carousel-->
<div class="row">
  <div class="container slider">
    <div id="myCarousel" class="carousel slide sliderfilter" data-ride="carousel">
      <!-- Indicators -->
      <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
      </ol>

      <!-- Wrapper for slides -->
      <div class="carousel-inner">
        <div class="item active">
          <img src="/images/slide1b.jpg" alt="Los Angeles" style="width:100%;">
          <div class="carousel-caption">
            <h3>Check out local artists!</h3>
            <p>
            cleveland, Ohio</p>
          </div>
        </div>

        <div class="item">
          <img src="/images/slide2b.jpg" alt="Chicago" style="width:100%;">
          <div class="carousel-caption">
            <h3>Think you have what it takes?</h3>
            <p><a href="/login">Sign up</a> for an artist account</p>
          </div>
        </div>
      </div>

      <!-- Left and right controls -->
      <a class="left carousel-control" href="#myCarousel" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="right carousel-control" href="#myCarousel" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right"></span>
        <span class="sr-only">Next</span>
      </a>
    </div>
  </div>
</div>
<br>
<hr>


<h3>Top Artworks</h3>
{{#each artworks}}

<div class="col-xs-12 col-md-3 text-center">
  <a href="/artworks/{{this.id}}"><img style="max-width:250px; padding: 20px 0px;" class="art-photo" src="{{this.media}}"></a>
</div>

{{/each}}