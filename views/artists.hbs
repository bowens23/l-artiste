{{#if success_msg}}
            
    <div class="alert alert-success">{success_msg}}</div>

{{/if}}

<div class="col-md-12">
  <h1>{{artist.name}}</h1>
  <hr>

  <h4 class="">Bio: {{artist.bio}}</h4>


  <h3>{{artist.name}}'s Artworks</h3>
</div>


<div class="row">
  <hr>
  {{#each artworks}}

    <div class="col-xs-12 col-md-3">
      <a href="/artworks/{{this.id}}"><img style="max-width:280px" class="art-photo" src="{{this.media}}"></a>

      <br>
      <h4 class="text-center">
       {{this.title}} 
      </h4>
      <br>

    </div>

  {{/each}}

  <br>
  <br>
  <br>
</div>